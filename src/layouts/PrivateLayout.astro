---
import '../styles/global.css';
import PrivateNav from '../components/vue/PrivateNav.vue';
import UserProfile from '../components/vue/UserProfile.vue';
import Footer from '../components/Footer.astro';
import { mockUserSession } from '../lib/fixtures/mock-user-session';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		<!-- Load Instrument Sans font from Google Fonts (PrimeVue Aura theme default) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />
	</head>
	<body class="min-h-screen flex flex-col bg-gray-900 text-white">
		<header class="w-full sticky top-0 z-10">
			<div class="w-full bg-gray-800 border-b border-gray-700 flex items-center justify-between px-4 py-3">
				<!-- PrivateNav positioned left (flex-1 to take available space) -->
				<div class="flex-1">
					<PrivateNav client:load />
				</div>
				<!-- UserProfile positioned top-right -->
				<div class="ml-4">
					<UserProfile userSession={mockUserSession} client:load />
				</div>
			</div>
		</header>
		<main class="flex-1 w-full max-w-7xl mx-auto px-4 py-8 md:px-6 md:py-12 lg:px-8 lg:py-16">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
